<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.mdzza.dao.UserDao">

	<select id="get" resultType="cn.mdzza.entity.User">
		select *
		from user
		where ${type} = #{sign} limit 1
	</select>

	<select id="getByLoginName" resultType="cn.mdzza.entity.User">
		select *
		from user
		where username=#{loginName} or mobile=#{loginName} or email=#{loginName}
		limit 1
	</select>

	<insert id="register">
		insert into user
		(
			${type},
			password
		) values (
			#{sign},
			#{password}
		)
	</insert>
</mapper>